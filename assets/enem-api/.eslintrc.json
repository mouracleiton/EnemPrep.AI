{
    "extends": [
        "next",
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "plugins": ["react"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [
            1,
            { "extensions": [".ts", ".js", ".tsx", ".jsx"] }
        ]
    },
    "globals": {
        "React": "writable"
    }
}
